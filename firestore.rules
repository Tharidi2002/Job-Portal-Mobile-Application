rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Secure user profiles: only authenticated users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public read access to the companies collection for all users
    match /companies/{companyId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == companyId;
    }

    // Allow public read access to the jobs collection for all users
    match /jobs/{jobId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.companyId;
    }
  }
}
